@using Urfu.Its.Web.DataContext
@model Urfu.Its.Web.DataContext.VariantGroup


@{
    ViewBag.Title = "Редактирование группы в варианте";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>VariantGroup</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.GroupType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.GroupType, Html.GetEnumSelectList(typeof(VariantGroupType)))
                @Html.ValidationMessageFor(model => model.GroupType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TestUnits, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestUnits)
                @Html.ValidationMessageFor(model => model.TestUnits)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VariantId, "VariantId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VariantId", String.Empty)
                @Html.ValidationMessageFor(model => model.VariantId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
