@model Urfu.Its.Web.Model.Models.ForeignLanguageCompositionCVM

@{
    ViewBag.Title = "Копирование зачислений конкурсных групп";
}

<div style="border: 1px;">
    Копировать из

    <div class="alert-info">
        @Model.SrcCompetitionGroup.Name (@Model.SrcCompetitionGroup.Year @Model.SrcCompetitionGroup.Semester.Name)
    </div>
    в
    <div class="alert-info">
        @Model.DstCompetitionGroup.Name (@Model.DstCompetitionGroup.Year @Model.DstCompetitionGroup.Semester.Name)
    </div>
</div>
<br />
@if (Model.ExceptedSubgroupCounts.Count() > 0)
{
<div>
    Не скопированы подгруппы на следующие ИЯ и нагрузки:
    <table class="table">
        <thead>
            <tr>
                <th>
                    Секция
                </th>

            </tr>
        </thead>
        @foreach (var s in Model.ExceptedSubgroupCounts)
        {
            <tr>
                <td>
                    @s
                </td>

            </tr>
        }

    </table>
</div>
}
<font size="3" color="red" face="Arial">@Model.Message</font>

<br />
@if (Model.DownloadReport)
{ 
    @Html.ActionLink("Отчёт о результате", "DownloadAutoAdmissionReport", "ForeignLanguage")
}